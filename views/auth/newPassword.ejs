<%- include("../includes/head") %>
    <section class="mx-auto">
        <a href="/">Go back Home</a>
        <h1 class="title">Change new Password</h1>
        <% if(errorMsg) { %>
            <p class="msg-box">
                <%= errorMsg %>
            </p>
            <% } %>
                <form action="/change-newpassword" method="post">
                    <input type="hidden" value="<%= resetToken %>" name="resetToken">
                    <input type="hidden" value="<%= user_id %>" name="user_id">
                    <div>
                        <label for="password">Enter new password</label>
                        <input type="password" id="password" name="password" value="<%= oldFormData.password %>">
                    </div>
                    <div>
                        <label for="confirmedpassword">Enter new confirmed password</label>
                        <input type="password" id="confirmedpassword" name="confirmedpassword"
                            value="<%= oldFormData.confirmedpassword %>">
                    </div>
                    <button>Change Password</button>
                </form>
    </section>
    <%- include("../includes/foot") %>